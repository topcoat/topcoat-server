@font-face {
    font-family: "source-l";
    src: url("../font/SourceSansPro/SourceSansPro-Light.otf");
    font-weight: 900;
    font-style: normal;
}

@font-face {
    font-family: "source-sb";
    src: url("../font/SourceSansPro/SourceSansPro-Semibold.otf");
    font-weight: 700;
    font-style: normal;
}

body
	font 14px source-l, sans-serif
	color #454545
	margin 40px

a
	color #0083e8

svg
	height 1000px
	width 1000px

table
	width 100%

td
	font-size 12px
	text-align left
	padding 1em 0.5em 1em 1em
	background #edf1f1
	border-top 1px solid #DDDFDF
	border-bottom 1px solid #DDDFDF
	&:hover .add-filter
		visibility visible

thead tr
	background #DFE2E2
	&:hover
		background #DFE2E2
	th
		padding 0.5em 0.5em 0.5em 1em
		text-align left !important
		text-shadow 0 1px 0 #fff

tr
	-webkit-transition-duration .1s
	&:hover
		background #f4f4f4

#holder
	width 800px
	height 600px

.odd
	background #eee
	&:hover
		background #eee

.even:hover
	background none

.odd td, .even td
	padding 1.5em

.hide
	display none

[class*=" group"]
	border-top 2px solid #999

.commit + a img
	width 16px
	margin 0 .5em -2px
	opacity 0

tr:hover img
	opacity 1
	transition-duration .5s

.stress-selectors
	border-top 1px solid #ddd

.progress
	color #333
	padding .1em
	font-size .8em
	margin: .5em 0;
	padding: .5em;
	border-radius: 2px;
	border: 1px solid rgba(0,0,0,.2);
	.hidden
		display none
	&:hover
		.hidden
			display block

.add-filter, .close
	margin 0 0 0 0.5em
	visibility hidden
	padding 0 .4em
	text-decoration none
	border 1px solid #9c9e9e
	background #e5e9e9
	border-radius 3px
	-webkit-box-shadow inset 0 1px 0 #fff
	box-shadow: inset 0 1px 0 #fff
	color #454545	

.close
	visibility visible
	cursor pointer

.legend
	position absolute
	top 50px
	right 100px

.test-info
	background #f8f8f8
	width 300px
	border-radius 5px
	border 1px solid rgba(0,0,0,.2)
	padding-left .5em
	li
		list-style none
		border-bottom 1px solid rgba(0,0,0,.2)
		padding .5em
		margin-left -.5em
	h2
		text-align center
	input
		display block
		width 80%
		padding .5em
		margin .5em 0

button
	font-size 12px
	font-family source-l, sans-serif
	padding 4px 10px
	border 1px solid #9c9e9e
	background #e5e9e9
	border-radius 3px
	-webkit-box-shadow: inset 0 1px 0 #fff
	box-shadow: inset 0 1px 0 #fff

input[type="checkbox"] 
	margin-right 0.5em